{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/src/*"]
    },
    "composite": true
  },
  "exclude": ["node_modules"],
  "references": [
    { "path": "apps/frontend" },
    { "path": "apps/backend" },
    { "path": "packages/shared" }
  ]
}
